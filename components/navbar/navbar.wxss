.loading-gif {
  width: 46rpx;
  height: 46rpx;
}

.loading-wrap {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.loading-wrap image {
  background-color: transparent;
}

.header {
  display: flex;
  align-items: center;
  top: 0;
  position: fixed;
  width: 100%;
  background-color: #FFF;
  z-index: 99999;
}

.header .line {
  border-left: 1rpx solid #D7D7D7;
  height: 36rpx;
}

.header .back,
.header .home {
  height: 32rpx;
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 左侧胶囊形状样式 */
.header .title-bar {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 138rpx;
  height: 56rpx;
  border: 1rpx solid #F1F1F1;
  border-radius: 32rpx;
  margin-left: 14rpx;
  padding: 0 14rpx;
}

/* 左侧默认样式 */
.header .title-bar-default {
  display: flex;
  align-items: center;
  height: 56rpx;
}

.header .title-bar-default .back-default {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 10rpx;
}

.header .title-bar-default .home-default {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding-left: 10rpx;
}

.back-default image,
.home-default image {
  width: 32rpx;
  height: 32rpx;
}

.header .title-bar image {
  width: 32rpx;
  height: 32rpx;
  background: transparent;
  vertical-align: top;
}

.header .header-title {
  position: absolute;
  left: 50%;
  font-size: 38rpx;
  transform: translateX(-50%);
}